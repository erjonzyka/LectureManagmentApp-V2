@using LectureAppLibrary.Models
@model ProductViewModel



@if (!string.IsNullOrEmpty(ViewBag.Message))
{
    <div class="alert alert-info">
        @ViewBag.Message
    </div>
}


<div class="d-flex justify-content-around">
    <div class="forma">
<h1>Krijo nje departament te ri</h1>


<form asp-action="ShtoDepartament" asp-controller="Admin" method="post">
  <div class="form-group">
    <label asp-for="@Model.Department.DepartmentName">Emri i Departamentit</label>
                <input type="text" class="form-control" id="exampleInputEmail1" asp-for="@Model.Department.DepartmentName" placeholder="Vendosni emrin e departamentit">
            <span asp-validation-for="@Model.Department.DepartmentName" class="text-danger"></span>
   <button type="submit" class="btn btn-outline-primary mt-4">Shto Departament</button>
  </div>
  </form>

    </div>
    <div class="alldepartments">
        @await Html.PartialAsync("_TeGjithaDepartamentet", @Model.Departments)
    </div>
</div>