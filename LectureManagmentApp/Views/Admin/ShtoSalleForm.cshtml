@using LectureAppLibrary.Models
@model LectureAppLibrary.Models.ProductViewModel



<div class="d-flex justify-content-around">
    <div class="forma">
        <h1>Krijo nje salle te re</h1>


        <form asp-action="ShtoSalle" asp-controller="Admin" method="post">
            <div class="form-group">
                <label asp-for="@Model.Classroom.SallaNo">Numri i Salles</label>
                <input type="number" class="form-control" id="exampleInputEmail1" asp-for="@Model.Classroom.SallaNo" min="100">
                <span asp-validation-for="@Model.Classroom.SallaNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Classroom.Kapaciteti">Kapaciteti</label>
                <input type="text" class="form-control" id="exampleInputEmail1" asp-for="@Model.Classroom.Kapaciteti">
                <span asp-validation-for="@Model.Classroom.Kapaciteti" class="text-danger"></span>
            </div>
            
            <button type="submit" class="btn btn-outline-primary mt-4">Shto Sallen</button>
        </form>

    </div>
    <div class="alldepartments">
        @await Html.PartialAsync("_TeGjithaSallat", @Model.Classrooms)
    </div>
</div>
