﻿@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@using LectureAppLibrary.Models
@model ProductViewModel



@if (!string.IsNullOrEmpty(ViewBag.Message))
{
    <div class="alert alert-info">
        @ViewBag.Message
    </div>
}


<div class="d-flex justify-content-around">
    <div class="forma">
        <h1>Krijo nje grup te ri</h1>


        <form asp-action="AddGroup" asp-controller="Sekretaria" method="post">
            <div class="form-group">
                <label asp-for="@Model.Grupi.Viti">Viti</label>
                <input type="number" class="form-control" id="exampleInputEmail1" asp-for="@Model.Grupi.Viti" max="3" min="1">
                <span asp-validation-for="@Model.Grupi.Viti" class="text-danger"></span>

            </div>

            <div class="form-group">
                <label asp-for="@Model.Grupi.Paraleli">Paraleli</label>
                <input type="text" class="form-control" id="exampleInputEmail1" asp-for="@Model.Grupi.Paraleli">
                <span asp-validation-for="@Model.Grupi.Paraleli" class="text-danger"></span>

            </div>

            <button type="submit" class="btn btn-outline-primary mt-4">Shto Grupin</button>
        </form>

    </div>
    <div class="alldepartments">
        @await Html.PartialAsync("_TeGjithaGrupet", @Model.TeGjithaGrupet)
    </div>
</div>