@using LectureAppLibrary.Models
@model List<Pedagog>

<h2 class="text-center">Pedagoget</h2>

<table class="table table-hover text-center">
    <thead>
        <tr>
            <th scope="col">Emri i Pedagogut/th>
            <th scope="col">Email</th>
            <th scope="col">Lendet</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td><a class="no-underline" asp-action="PedagoguDetails" asp-route-id="@item.PedagogID" asp-controller="Sekretaria">@item.FirstName @item.LastName</a> </td>
                <td>@item.Email</td>
                <td>@item.PedagogLenda.Count()</td>
            </tr>
        }
    </tbody>
</table>
